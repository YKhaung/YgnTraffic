<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.sh.ygntraffic.ui.DetailActivity">
  <RelativeLayout android:layout_width="match_parent"
      android:background="@color/white"
      android:layout_height="match_parent">
    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/trafficName"
        android:textSize="22sp"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/trafficName"
        android:background="@color/red"
        android:id="@+id/trafficRemark"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/trafficReportTime"
        android:layout_below="@+id/trafficRemark"
        android:layout_width="match_parent"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/btnReport"
          android:textSize="16sp"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:text="@string/report"
          android:gravity="center"
          android:background="#006D91"
          android:layout_height="48dp"
          android:layout_width="0dp"
          android:layout_weight=".50"
          />


      <Button
          android:id="@+id/btnMyPlace"
          android:textColor="@color/white"
          android:background="@color/green"
          android:textSize="16sp"
          android:layout_width="0dp"
          android:layout_weight=".50"
          android:text="@string/myplace"
          android:textStyle="bold"
          android:gravity="center"
          android:layout_height="48dp"/>


    </LinearLayout>
  </RelativeLayout>

</RelativeLayout>
